        <activity
            android:name="com.microtechmd.pda.ui.activity.ActivityFullGraph"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" />

        <receiver android:name="com.microtechmd.pda.BootBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.microtechmd.pda.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>